.row.justify-content-center.instruction
  .jumbotron
    h1.mb-4 
      = t '.title', account_id: verification.external_id, org: current_account.public_name
    = simple_form_for verification, url: form_path, html: { multipart: true } do |f|
      .row
        .col-md-12
          div = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
      .row
      .row
        .col-4
          = f.input :name
        .col-4
          = f.input :last_name
        .col-4
          = f.input :patronymic
      .row
        .col-4
          = f.input :country, as: :country, priority: Rails.configuration.application.country_priority
        .col-4
          = f.input :document_number
      .row
        .col-6
          = f.input :reason, 
            include_blank: false, 
            collection: Verification::REASONS,
            label_method: lambda { |item| t("attributes.reasons.#{item}") }
        .col-6
          = f.input :email, as: :email

      .row
        .col-6
          = f.input :documents_cache, as: :hidden
          = f.input :documents,
                     wrapper: :vertical_file,
                     as: :file,
                     input_html: { multiple: true, accept: Rails.configuration.application.document_content_types.join(',') },
                     label: "Документы",
                     hint: t('.from_to_size', from: number_to_human_size(Rails.configuration.application.min_upload_file_size), to: number_to_human_size(Rails.configuration.application.max_upload_file_size))
      .row
        .col-12
          .text-center
            = f.submit class: 'btn btn-lg btn-primary', data: { 'disable-width' => 'Отправляю..' }
      .row.mt-4
        .col-md-12
          .alert.alert-warning role='alert'
            = raw verification.account.form_description_interpolated
